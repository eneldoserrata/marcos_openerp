<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="print_ncf">
        <button class="print_ncf oe_highlight">Imprimir Comprobante</button>
    </t>

    <t t-extend="PosWidget">
        <t t-jquery=".neworder-button" t-operation="after">
            <button class="removeorder-button">-</button>
        </t>
    </t>

    <t t-name="credit_order_button_template">
        <button type="button" class="credit_order_button">A credito</button>
        <br />
    </t>

    <t t-name="draft_order_button_template">
        <button type="button" class="draft_order_button">A Caja</button>
        <br />
    </t>

    <t t-name="nc_save_payment">
        <button type="button" class="nc_save_payment">Aplicar</button>
        <br />
    </t>

    <t t-name="pos-assign_name">
        <table align="center">
            <tr>
                <td>Nombre: </td>
                <td style="padding-left: 5px;">
                    <input type="text" name="pos_customer_name" id="pos_customer_name" value="" style="width: 180px;"/>
                </td>
            </tr>
        </table>
    </t>

</templates>